<resources>
	<!-- Base application theme. -->
	<style name="Theme.TrackingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<item name="fontFamily">@font/poppins_regular</item>
		<item name="android:includeFontPadding">false</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.TrackingApp.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:statusBarColor">@color/colorPrimaryDark</item>
	</style>

	<style name="Theme.TrackingApp.NoActionBar.Black">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:statusBarColor">@color/black</item>
	</style>

	<style name="Theme.TrackingApp.NoActionBar.White">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:statusBarColor">@color/white</item>
	</style>

	<style name="Theme.TrackingApp.NoActionBar.WhiteDark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:statusBarColor">@color/white_transparent_bg</item>
	</style>

	<style name="Theme.TrackingApp.NoActionBar.PrimaryDark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:statusBarColor">@color/colorPrimaryDark</item>
	</style>

	<style name="toolbar_appearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="error_appearance" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">10sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ShapeCircle" parent="">
		<item name="cornerSize">50%</item>
	</style>

	<style name="ShapeNormalCorner" parent="">
		<item name="cornerSize">8sp</item>
	</style>

	<style name="ShapeLeftNormalCorner" parent="">
		<item name="cornerSizeBottomLeft">4%</item>
		<item name="cornerSizeTopLeft">4%</item>
	</style>

	<style name="ShapeTopNormalCorner" parent="">
		<item name="cornerSizeTopLeft">4%</item>
		<item name="cornerSizeTopRight">4%</item>
	</style>

	<style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
		<item name="android:textSize">12sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="AppSearchView" parent="Widget.AppCompat.SearchView">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/text_transparent</item>
		<item name="iconTint">@color/text_transparent</item>
		<item name="searchViewStyle">@style/ThemeOverlay.AppCompat.Dark</item>
	</style>
</resources>