<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragment.AboutFragment">

	<View
		android:id="@+id/line_top"
		android:layout_width="0sp"
		android:layout_height="5sp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="6sp"
		android:layout_marginBottom="8sp"
		android:background="@drawable/line_bg"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintWidth_percent="0.3"
		tools:ignore="SmallSp" />

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16sp"
		android:text="@string/txt_title_about_app"
		android:textColor="@color/black"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/line_top" />

	<TextView
		android:id="@+id/tv_about_01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16sp"
		android:layout_marginTop="32dp"
		android:background="@drawable/bg_btn_soft_primary_dark_24"
		android:drawablePadding="12sp"
		android:includeFontPadding="false"
		android:paddingHorizontal="16sp"
		android:paddingVertical="12sp"
		android:text="Version 1.0"
		android:textColor="@color/text_transparent"
		android:textSize="16sp"
		app:drawableStartCompat="@drawable/baseline_do_not_disturb_on_total_silence_24"
		app:drawableTint="@color/text_transparent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_title"
		tools:ignore="HardcodedText,RtlSymmetry" />

	<TextView
		android:id="@+id/tv_about_02"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16sp"
		android:background="@drawable/bg_btn_soft_primary_dark_24"
		android:drawablePadding="12sp"
		android:includeFontPadding="false"
		android:paddingHorizontal="16sp"
		android:paddingVertical="12sp"
		android:text="Complatible with Android 8 to 14"
		android:textColor="@color/text_transparent"
		android:textSize="16sp"
		app:drawableStartCompat="@drawable/baseline_do_not_disturb_on_total_silence_24"
		app:drawableTint="@color/text_transparent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_about_01"
		tools:ignore="HardcodedText,RtlSymmetry" />

	<TextView
		android:id="@+id/tv_about_03"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16sp"
		android:background="@drawable/bg_btn_soft_primary_dark_24"
		android:drawablePadding="12sp"
		android:includeFontPadding="false"
		android:paddingHorizontal="16sp"
		android:paddingVertical="12sp"
		android:text="Recommended system Android 14"
		android:textColor="@color/text_transparent"
		android:textSize="16sp"
		app:drawableStartCompat="@drawable/baseline_do_not_disturb_on_total_silence_24"
		app:drawableTint="@color/text_transparent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_about_02"
		tools:ignore="HardcodedText,RtlSymmetry" />

	<TextView
		android:id="@+id/tv_about_04"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16sp"
		android:background="@drawable/bg_btn_soft_primary_dark_24"
		android:drawablePadding="12sp"
		android:includeFontPadding="false"
		android:paddingHorizontal="16sp"
		android:paddingVertical="12sp"
		android:text="Created by Sultan Misbahul Farya"
		android:textColor="@color/text_transparent"
		android:textSize="16sp"
		app:drawableStartCompat="@drawable/baseline_do_not_disturb_on_total_silence_24"
		app:drawableTint="@color/text_transparent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_about_03"
		tools:ignore="HardcodedText,RtlSymmetry" />

	<TextView
		android:id="@+id/tv_close"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="32sp"
		android:text="@string/txt_close"
		android:textColor="@color/red"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_about_04" />

	<View
		android:id="@+id/spacer"
		android:layout_width="match_parent"
		android:layout_height="720sp"
		android:layout_marginTop="48sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_close"
		tools:ignore="VisualLintBounds" />

</androidx.constraintlayout.widget.ConstraintLayout>